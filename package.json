{
  "name": "si-red-backend",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn src/server.ts",
    "tsoa": "tsoa spec && tsoa routes",
    "start": "npm run tsoa && npm run dev",
    "seed:superuser": "ts-node-dev src/seed/superuser.ts",
    "migrate": "cross-env NODE_OPTIONS=\"-r ts-node/register -r dotenv/config\" sequelize-cli db:migrate",
    "migrate:undo": "cross-env NODE_OPTIONS=\"-r ts-node/register -r dotenv/config\" db:migrate:undo",
    "seed": "cross-env NODE_OPTIONS=\"-r ts-node/register -r dotenv/config\" db:seed:all",
    "build": "npm run tsoa && tsc",
    "lint": "eslint . --ext .ts --ext .tsx",
    "format": "prettier --write \"src/**/*.{ts,tsx,json,md}\""
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "eslint --fix --max-warnings 0"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SimplyTechnologies/SI-Red-Backend.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/SimplyTechnologies/SI-Red-Backend/issues"
  },
  "homepage": "https://github.com/SimplyTechnologies/SI-Red-Backend#readme",
  "description": "",
  "dependencies": {
    "axios": "^1.9.0",
    "bcrypt": "^6.0.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "express-validator": "^7.2.1",
    "http-errors": "^2.0.0",
    "jsonwebtoken": "^9.0.2",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "pg": "^8.16.0",
    "sequelize": "^6.37.7",
    "swagger-ui-express": "^5.0.1",
    "tsoa": "^6.6.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^3.0.0",
    "@types/cookie-parser": "^1.4.8",
    "@types/cors": "^2.8.18",
    "@types/express": "^5.0.2",
    "@types/http-errors": "^2.0.4",
    "@types/joi": "^17.2.3",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/node": "^22.15.19",
    "@types/passport-jwt": "^4.0.1",
    "@types/swagger-ui-express": "^4.1.8",
    "cross-env": "^7.0.3",
    "sequelize-cli": "^6.6.3",
    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "@typescript-eslint/parser": "^8.32.1",
    "eslint": "^9.27.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.4.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.0.0",
    "prettier": "^3.5.3",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.8.3"
  }
}
